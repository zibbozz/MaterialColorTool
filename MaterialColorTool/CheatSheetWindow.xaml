<Window x:Class="MaterialColorTool.CheatSheetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaterialColorTool"
        mc:Ignorable="d"
        Title="Material Design Guide" Width="900" Height="650" ResizeMode="NoResize" Background="#3F4349">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <!-- Inhalte -->
        <Grid Name="umgebungGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Rectangle Fill="#455A64" Grid.Row="1" Margin="7">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" Direction="270" BlurRadius="15"/>
                </Rectangle.Effect>
            </Rectangle>

            <Rectangle Fill="#455A64" Grid.Row="1" Grid.Column="1" Margin="7">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" Direction="270" BlurRadius="15"/>
                </Rectangle.Effect>
            </Rectangle>

            <Rectangle Fill="#455A64" Grid.Row="3" Margin="7">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" Direction="270" BlurRadius="15"/>
                </Rectangle.Effect>
            </Rectangle>

            <Rectangle Fill="#455A64" Grid.Row="3" Grid.Column="1" Margin="7">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" Direction="270" BlurRadius="15"/>
                </Rectangle.Effect>
            </Rectangle>
            <!-- Dimensionen -->
            <TextBlock Grid.Row="1" Foreground="White" FontSize="14" Width="400" Height="200" TextWrapping="Wrap" TextAlignment="Center" FontFamily="/MaterialColorTool;component/Fonts/#Roboto">Ein Material kann unterschiedliche Höhen und Breiten haben.<LineBreak/>Die Tiefe beträgt immer 1dp.<LineBreak/><LineBreak/>Schatten werden nicht von alleine größer oder<LineBreak/>weicher, sondern durch das anheben eines<LineBreak/>Materials.</TextBlock>
            <Rectangle Fill="#1565C9" Width="400">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" BlurRadius="15" Direction="270"/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBlock FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto">Dimensionen</TextBlock>

            <!-- Physikalische Eigenschaften -->
            <TextBlock Grid.Row="1" Foreground="White" FontSize="14" Width="400" Height="200" TextWrapping="Wrap" TextAlignment="Center" Grid.Column="1" FontFamily="/MaterialColorTool;component/Fonts/#Roboto">Elemente auf einem Material können dieses Material nicht verlassen.<LineBreak/><LineBreak/>Materialien können sich nicht überschneiden, da sie als physikalische Objekte angesehen werden.<LineBreak/><LineBreak/>Materialien können sich nicht durch andere Materialien bewegen.</TextBlock>
            <Rectangle Fill="#1565C9" Grid.Column="1" Width="400">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" BlurRadius="15" Direction="270"/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBlock FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Grid.Column="1" FontFamily="/MaterialColorTool;component/Fonts/#Roboto">Physikalische Eigenschaften</TextBlock>
            
            <!-- Anhebung -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center">Menü</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">16dp</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">Kopfleiste</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">4dp</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2">Karte</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1">1dp bis 8dp</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3">Schwebende Knöpfe</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1">6dp</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4">Knöpfe</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="1">2dp bis 8dp</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5">Dialoge</TextBlock>
                <TextBlock Foreground="White" FontFamily="/MaterialColorTool;component/Fonts/#Roboto" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Grid.Column="1">24dp</TextBlock>
            </Grid>
            <Rectangle Fill="#1565C9" Grid.Row="2" Width="400">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" BlurRadius="15" Direction="270"/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBlock FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Grid.Row="2" FontFamily="/MaterialColorTool;component/Fonts/#Roboto">Anhebung</TextBlock>
            
            <!-- Licht und Schatten -->
            <TextBlock Grid.Row="3" Foreground="White" FontSize="14" Width="400" Height="200" TextWrapping="Wrap" TextAlignment="Center" Grid.Column="1" FontFamily="/MaterialColorTool;component/Fonts/#Roboto">Jedes Material besitzt zwei Schatten.<LineBreak/>Einen durch ein Umgebungslicht, welcher weich ist und in alle Richtungen geworfen wird und einen, der durch eine Hauptlichtquelle geworfen wird. Dieser ist härter als der erste Schatten, aber nur in eine Richtung.</TextBlock>
            <Rectangle Fill="#1565C9" Grid.Row="2" Grid.Column="1" Width="400">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.4" BlurRadius="15" Direction="270"/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBlock FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Grid.Row="2" Grid.Column="1" FontFamily="/MaterialColorTool;component/Fonts/#Roboto">Licht und Schatten</TextBlock>
        </Grid>

        <Grid Name="layoutGrid" Grid.Row="1" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
